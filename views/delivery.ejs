          <form id="inventory" action = "/transactionDetails" method="get">
            <button type="submit"><i class="fa fa-book fa-lg"></i><span>CashierPage</span></button>
            </form>
    
          <% } %>
  

    <form id="logoutf" action = "/logout?_method=DELETE" method="POST">

    <% if(errors != "") { %>
        <% errors.forEach((item) => { %>
          <br><br>  
          <span class = "alert alert-danger">
                <%- item %>
            </span>
        <% }); %>
    <% } %>


    <form method="post" id="addDeliveryPOST" action="/addDeliveryPOST">

        
        
          <br>
          <label for="UPC" style="width:200px; display: inline-block;" >Item UPC</label>
          <input type="number" id="UPC" name="UPC" placeholder="UPC #" required > <br>
          <label for="Amount" style="width: 200px; display: inline-block;" >Amount</label>
          <input type="number" id="Amount" name="Amount" placeholder="Amount" required> <br>

          <button id="addDeliveryPOST" type="submit" style="color: black; width: 150px;"  ><span> Add to Inventory</span> </button>
      
    </form>
    
